<h1>Nová položka peněžního deníku</h1>

<% form_for(@cashbook) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :pohyb %><br />
    <%= f.select :movement, @movement  %>
  </p>
  <p>
    <%= f.label :zákazník %><br />
    <%= f.select :customer_id, @customers  %>
  </p>
  <p>
    <%= f.label :datum %><br />
    <%= f.date_select :when %>
  </p>
  <p>
    <%= f.label :kde %><br />
    <%= f.select :where, @where %>
  </p>
  <p>
    <%= f.label :Částka %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :DPH %><br />
    <%= f.select :DPH, @DPH %>
  </p>
  <p>
    <%= f.label :poznámka %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Vytvořit" %>
  </p>
<% end %>

<%= link_to 'Zpět', cashbooks_path %>
